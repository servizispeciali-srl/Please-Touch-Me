<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ss.app.artcontact.InfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ArtContact.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:popupTheme="@style/Theme.ArtContact.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/creditsLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <ListView
                android:id="@+id/creditsList"
                android:layout_marginTop="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/finanziato_eu"
                android:orientation="vertical"
                android:layout_width="720px"
                android:layout_height="181px"
                android:layout_gravity="center"
                android:background="@drawable/finanziato_eu">
            </ImageView>
            <ImageView
                android:id="@+id/mur"
                android:orientation="vertical"
                android:layout_marginTop="50px"
                android:layout_width="707px"
                android:layout_height="212px"
                android:layout_gravity="center"
                android:background="@drawable/mur">
            </ImageView>
            <ImageView
                android:id="@+id/italiadomani"
                android:orientation="vertical"
                android:layout_marginTop="50px"
                android:layout_width="680px"
                android:layout_height="221px"
                android:layout_gravity="center"
                android:background="@drawable/italiadomani">
            </ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/macLogo"
            android:orientation="vertical"
            android:layout_width="720px"
            android:layout_height="350px"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="@drawable/artcontact_bckg">
        </ImageView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>